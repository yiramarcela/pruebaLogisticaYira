    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/pw2-grupo03/public/css/style.css">
    <link href="/pw2-grupo03/public/DataTables/datatables.min.css" rel="stylesheet"/>
    <link href="/pw2-grupo03/public/DataTables/responsive.dataTables.min.css" rel="stylesheet"/>
    <script type="text/javascript">
        function showContentHazard() {
            element = document.getElementById("imoClass");
            check = document.getElementById("hazard");
            if (check.checked) {
                element.style.display='block';
            }
            else {
                element.style.display='none';
            }
        }
        function showContentReefer() {
            element = document.getElementById("numberTemperature");
            check = document.getElementById("reefer");
            if (check.checked) {
                element.style.display='block';
            }
            else {
                element.style.display='none';
            }
        }
        function showContentMechanic() {
            element = document.getElementById("mechanic");
            element2 = document.getElementById("labelMechanic");
            check = document.getElementById("internal");
            if (check.checked) {
                element.style.display='block';
                element2.style.display='block';
            }
            else {
                element.style.display='none';
                element2.style.display='none';
            }
        }
    </script>
</head>

